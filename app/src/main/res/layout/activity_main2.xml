<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roushan.calculator.Main2Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:textAlignment="gravity"
        android:gravity="bottom|right"
        android:textColor="@color/colorBlack"
        android:id="@+id/textView"
        android:background="@color/colorText"
        android:textSize="50sp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:id="@+id/btn7"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textSize="30sp"
        android:background="@color/colorCalc"
        android:onClick="onClickNumber"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:id="@+id/btn8"
        android:textSize="30sp"
        android:background="@color/colorCalc"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn7"
        android:onClick="onClickNumber"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:id="@+id/btn9"
        android:textSize="30sp"
        android:background="@color/colorCalc"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn8"
        android:onClick="onClickNumber"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="4"
        android:id="@+id/btn4"
        android:textSize="30sp"
        android:background="@color/colorCalc"
        android:layout_below="@+id/btn7"
        android:layout_alignStart="@+id/btn7"
        android:onClick="onClickNumber"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        android:id="@+id/btn5"
        android:textSize="30sp"
        android:background="@color/colorCalc"
        android:layout_below="@+id/btn8"
        android:layout_toRightOf="@+id/btn4"
        android:onClick="onClickNumber"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        android:id="@+id/btn6"
        android:textSize="30sp"
        android:background="@color/colorCalc"
        android:layout_below="@+id/btn9"
        android:layout_toRightOf="@+id/btn5"
        android:onClick="onClickNumber"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        android:id="@+id/btn1"
        android:textSize="30sp"
        android:background="@color/colorCalc"
        android:layout_below="@+id/btn4"
        android:layout_alignStart="@+id/btn4"
        android:onClick="onClickNumber"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2"
        android:id="@+id/btn2"
        android:textSize="30sp"
        android:background="@color/colorCalc"
        android:layout_below="@+id/btn5"
        android:layout_toRightOf="@+id/btn1"
        android:onClick="onClickNumber"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="3"
        android:id="@+id/btn3"
        android:textSize="30sp"
        android:background="@color/colorCalc"
        android:layout_below="@+id/btn6"
        android:layout_toRightOf="@+id/btn2"
        android:onClick="onClickNumber"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="C"
        android:id="@+id/btnClear"
        android:textSize="30sp"
        android:background="@color/colorCalc"
        android:layout_below="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:onClick="onClickClear"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="0"
        android:id="@+id/btn0"
        android:textSize="30sp"
        android:background="@color/colorCalc"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@+id/btnClear"
        android:onClick="onClickNumber"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="="
        android:id="@+id/btnEqual"
        android:textSize="30sp"
        android:background="@color/colorCalc"
        android:layout_below="@+id/btn3"
        android:layout_toRightOf="@+id/btn0"
        android:onClick="onClickEqual"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="+"
        android:id="@+id/btnPlus"
        android:textSize="30sp"
        android:background="@color/colorCalc"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn9"
        android:onClick="onClickOperator"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="-"
        android:id="@+id/btnMinus"
        android:textSize="30sp"
        android:background="@color/colorCalc"
        android:layout_below="@+id/btnPlus"
        android:layout_toRightOf="@+id/btn6"
        android:onClick="onClickOperator"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="x"
        android:id="@+id/btnMult"
        android:textSize="30sp"
        android:background="@color/colorCalc"
        android:layout_below="@+id/btnMinus"
        android:layout_toRightOf="@+id/btn3"
        android:onClick="onClickOperator"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="รท"
        android:id="@+id/btnDiv"
        android:textSize="30sp"
        android:background="@color/colorCalc"
        android:layout_below="@+id/btnMult"
        android:layout_toRightOf="@+id/btnEqual"
        android:onClick="onClickOperator"/>

</RelativeLayout>
